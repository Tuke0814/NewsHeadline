<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground">

    <ImageView
        android:id="@+id/imageQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_intro_qq_normal"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/imageteng"
        android:layout_below="@+id/imageQQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_intro_tencent_normal"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/imagelang"
        android:layout_below="@+id/imageteng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_intro_weibo_normal"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/imageren"
        android:layout_below="@+id/imagelang"
        android:layout_width="150dp"
        android:layout_marginLeft="45dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_intro_renren_normal" />
    <ImageView
        android:id="@+id/imageren2"
        android:layout_below="@+id/imagelang"
        android:layout_toRightOf="@+id/imageren"
        android:layout_marginRight="50dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_intro_renren_normal" />
</RelativeLayout>